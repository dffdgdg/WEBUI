<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsApp</title>

    <!-- Подключение CSS Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Подключение кастомных стилей -->
    <link href="~/css/news.css" rel="stylesheet" />

    <style>
        body {
            background-color: #141414; /* Цвет фона страницы */
            color: #fff; /* Цвет текста на странице становится белым */
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #26282B;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: #fff; /* Цвет текста в навигационной панели будет белым */
            }

                .navbar .nav-link:hover {
                    color: #ccc; /* Цвет текста при наведении становится светло-серым */
                }

        .main-content {
            flex: 1;
            padding: 20px;
        }

        .footer {
            background-color: #26282B;
            color: #fff; /* Цвет текста внизу страницы белый */
            padding: 20px;
            text-align: center;
        }

            .footer a {
                color: #ccc; /* Цвет ссылок в футере светло-серый */
            }

                .footer a:hover {
                    color: #fff; /* Цвет ссылок при наведении белый */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="/">WebUI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Конфиденциальность</a>
                        </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-light" href="/Profile">Профиль</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light" href="/Login">Авторизация</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Конфиденциальность</a>
        </div>
    </footer>

    <!-- jQuery (необходимый для Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Popper.js (для компонента выпадающего меню Bootstrap) -->
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
